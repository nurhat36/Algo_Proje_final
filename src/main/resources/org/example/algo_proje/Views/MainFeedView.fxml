<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" styleClass="root-feed-pane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.algo_proje.Controllers.MainFeedController">

    <stylesheets>
        <URL value="@../Styles/mainfeed.css" />
    </stylesheets>

    <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <VBox prefWidth="250.0" styleClass="sidebar-menu">
            <padding><Insets bottom="20" left="10" right="10" top="20" /></padding>
            <VBox alignment="TOP_CENTER" spacing="10">
                <ImageView fx:id="userAvatar" fitHeight="60.0" fitWidth="60.0" preserveRatio="true" styleClass="user-avatar" />
                <Label fx:id="lblUserName" styleClass="user-name-label" text="Kullanıcı Adı" />
                <Label styleClass="status-online" text="Online" />
            </VBox>

            <Separator style="-fx-max-width: 150; -fx-padding: 10 0 10 0;" />

            <VBox spacing="10">
                <Button prefWidth="230" styleClass="menu-button-active" text="Anasayfa" />
                <Button prefWidth="230" styleClass="menu-button" text="Keşfet" />
                <Button prefWidth="230" styleClass="menu-button" text="Bildirimler" />
                <Button prefWidth="230" styleClass="menu-button" text="Ayarlar" />
            </VBox>

            <VBox VBox.vgrow="ALWAYS" /> <Button prefWidth="230" styleClass="logout-button" text="Çıkış Yap" />
        </VBox>

        <VBox styleClass="feed-area" VBox.vgrow="ALWAYS">

            <VBox styleClass="post-input-card">
                <TextArea prefHeight="60.0" promptText="Ne düşünüyorsun?" styleClass="form-textarea" />
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button styleClass="media-button" text="Fotoğraf Ekle" />
                    <Button styleClass="share-button" text="Paylaş" />
                </HBox>
            </VBox>

            <Label styleClass="feed-title" text="Son Paylaşımlar" />

            <ScrollPane fitToWidth="true" styleClass="feed-scroll-pane" VBox.vgrow="ALWAYS">
                <VBox fx:id="feedContainer" spacing="15" styleClass="feed-list">
                    <Label styleClass="post-card" text="Post 1 Örneği" />
                    <Label styleClass="post-card" text="Post 2 Örneği" />
                    <Label styleClass="post-card" text="Post 3 Örneği" />
                    <Label styleClass="post-card" text="Post 4 Örneği" />
                    <Label styleClass="post-card" text="Post 5 Örneği" />
                </VBox>
            </ScrollPane>
        </VBox>
    </HBox>
</AnchorPane>
