<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f0f2f5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.algo_proje.Controllers.TxtOperationsController">
    <children>
        <HBox spacing="15.0" AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
            <children>
                <VBox prefWidth="280.0" spacing="12.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <padding>
                        <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="Kontrol Paneli" textFill="#1a73e8">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <Separator prefWidth="200.0" />

                        <Label text="Kullanıcı ID (Kaynak):" />
                        <TextField fx:id="txtSourceID" promptText="Örn: 105" />

                        <Label text="Hedef ID (Opsiyonel):" />
                        <TextField fx:id="txtTargetID" promptText="Örn: 108" />

                        <Button fx:id="btnLoadFiles" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLoadAllData" style="-fx-background-color: #34495e;" text="Verileri Yükle (Graf Oluştur)" textFill="WHITE" />

                        <Separator prefWidth="200.0" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleAreFriends" style="-fx-background-color: #1abc9c;" text="Arkadaş Mı?" textFill="WHITE" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleShowFriends" style="-fx-background-color: #3498db;" text="Arkadaşları Göster" textFill="WHITE" />
                        <Button maxWidth="1.7976931348623157E308" onAction="#handleRecommendFriend" style="-fx-background-color: #9b59b6;" text="Arkadaş Öner" textFill="WHITE" />

                        <Separator prefWidth="200.0" />

                        <Button maxWidth="1.7976931348623157E308" onAction="#handleGeneralRanking" style="-fx-background-color: #2c3e50;" text="Genel Sıralama" textFill="WHITE" />
                    </children>
                </VBox>

                <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="İşlem Çıktıları">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                        </Label>
                        <TextArea fx:id="txtDisplayArea" editable="false" style="-fx-font-family: 'Consolas'; -fx-font-size: 14;" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #e8f0fe; -fx-padding: 5; -fx-background-radius: 5;">
                            <children>
                                <Label text="Durum:" textFill="#1967d2">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label fx:id="lblStatus" text="Sistem Hazır. Lütfen verileri yükleyin." />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>