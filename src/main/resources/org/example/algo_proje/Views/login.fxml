<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.algo_proje.Controllers.LoginController"
            prefWidth="900" prefHeight="600"
            styleClass="root-pane"> <stylesheets>
    <URL value="@../Styles/login.css" />
</stylesheets>

    <HBox alignment="CENTER"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

        <VBox styleClass="sidebar" prefWidth="450" alignment="CENTER" spacing="10">
            <Label text="Hoş Geldiniz" styleClass="sidebar-title"/>
            <Label text="Başlamak için giriş yapın." styleClass="sidebar-subtitle"/>
        </VBox>

        <VBox alignment="CENTER_LEFT" spacing="25"
              styleClass="form-container" prefWidth="450">

            <Label text="Giriş Yap" styleClass="card-title"/>

            <VBox spacing="5">
                <Label text="Kullanıcı Adı / E-posta" styleClass="form-label"/>
                <TextField fx:id="txtUser" promptText="Kullanıcı adınızı giriniz"
                           styleClass="form-input" />
            </VBox>

            <VBox spacing="5">
                <Label text="Şifre" styleClass="form-label"/>
                <PasswordField fx:id="txtPassword" promptText="Şifrenizi giriniz"
                               styleClass="form-input" />
                <Hyperlink text="Şifremi Unuttum?" styleClass="forgot-password-link"/>
            </VBox>

            <VBox spacing="10" alignment="CENTER">
                <Button text="Giriş Yap"
                        onAction="#loginClick"
                        prefWidth="300"
                        styleClass="primary-button" />

                <Label text="veya" styleClass="separator-text"/>

                <Button text="Kayıt Ol"
                        onAction="#openRegister"
                        prefWidth="300"
                        styleClass="secondary-button" />
            </VBox>
        </VBox>

    </HBox>

</AnchorPane>