<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.algo_proje.Controllers.ProfileController"
            prefHeight="700.0" prefWidth="600.0"
            styleClass="root-pane">

    <stylesheets>
        <URL value="@../Styles/profile.css" />
    </stylesheets>

    <ScrollPane fitToWidth="true" styleClass="no-border-scrollpane"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0">

        <VBox alignment="TOP_CENTER" spacing="20"
              styleClass="profile-container-content">

            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Label text="Profil Bilgilerini Tamamla" styleClass="header-title" />

            <HBox alignment="CENTER" spacing="40" styleClass="card">
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="profileImageView"
                               fitHeight="120" fitWidth="120"
                               preserveRatio="true"
                               styleClass="profile-image" />

                    <Button text="Fotoğraf Seç" fx:id="btnSelectImage"
                            styleClass="secondary-button" />
                </VBox>

                <VBox spacing="10" prefWidth="300">
                    <Label text="Biyografi" styleClass="form-label"/>
                    <TextArea fx:id="txtBio" promptText="Kendini kısaca tanıt..."
                              prefHeight="80" styleClass="form-textarea"/>
                </VBox>
            </HBox>

            <VBox spacing="15" styleClass="card" prefWidth="500">
                <Label text="Detaylı Bilgiler" styleClass="section-title"/>

                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50.0" />
                        <ColumnConstraints percentWidth="50.0" />
                    </columnConstraints>

                    <Label text="Website" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="form-label"/>
                    <TextField fx:id="txtWebsite" promptText="Website Adresi" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                    <Label text="Telefon" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="form-label"/>
                    <TextField fx:id="txtPhone" promptText="+90 (XXX) XXX XX XX" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                    <Label text="Doğum Tarihi" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="form-label"/>
                    <DatePicker fx:id="birthDatePicker" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                    <Label text="Cinsiyet" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="form-label"/>
                    <ComboBox fx:id="genderBox" promptText="Cinsiyet Seç" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                    <Label text="Ülke" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="form-label"/>
                    <TextField fx:id="txtCountry" promptText="Yaşadığı Ülke" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                    <Label text="Şehir" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="form-label"/>
                    <TextField fx:id="txtCity" promptText="Yaşadığı Şehir" styleClass="form-input" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>

            <Button text="Kaydet ve Bitir" fx:id="btnSave"
                    styleClass="primary-button" prefWidth="250"/>

        </VBox>

    </ScrollPane>

</AnchorPane>